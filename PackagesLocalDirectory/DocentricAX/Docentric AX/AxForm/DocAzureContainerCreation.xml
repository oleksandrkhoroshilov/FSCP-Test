				<Source><![CDATA[
    public void closeOk()
    {
        if (this.validate())
        {
            str containerBlobName = ContainerName.text();
            if (Box::confirm(strFmt("@DocentricAX:BlobCreateConfirm", containerBlobName)))
            {
                boolean created = DocAzureBlobHelper::createContainer(containerBlobName, true, false);
                if (created)
                {
                    super();
                    DocGlobalHelper::handleInfo(strFmt("@DocentricAX:ContainerCreatedSuccess", containerBlobName));
                }
                else
                {
                    DocGlobalHelper::handleError(strFmt("@DocentricAX:ContainerCreationFailure", containerBlobName));
                }
            }
        }
    }

]]></Source>
			</Method>
			<Method>
				<Name>validate</Name>
				<Source><![CDATA[
    public boolean validate()
    {
        str blobContainerName = ContainerName.text();

        if (blobContainerName == '')
        {
            return false;
        }

        // Check if the container name is valid.
        if (!DocAzureBlobHelper::isContainerNameValid(blobContainerName))
        {
            DocGlobalHelper::handleWarning(strFmt("@DocentricAX:InvalidContainerName", blobContainerName));
            return false;
        }

        // Check if the given container exists.
        if (DocAzureBlobHelper::containerExists(blobContainerName, true, false))
        {
            DocGlobalHelper::handleWarning(strFmt("@DocentricAX:ContainerAlreadyExists", blobContainerName));
            return false;
        }

        return true;
    }

]]></Source>
